generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../../dev.db"
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  mail      String
  bids      Bid[]
}

model Bid {
  id        Int     @id @default(autoincrement())
  amount    Float
  bidder    User    @relation(fields: [bidderId], references: [id])
  bidderId  Int
  auction   Auction @relation(fields: [auctionId], references: [id])
  auctionId Int
}

model Auction {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  reservePrice Float
  createdTime  DateTime
  expiration   DateTime
  Bid          Bid[]
}
