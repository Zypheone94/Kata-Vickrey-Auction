generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../../dev.db"
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  mail      String
  bids      Bid[]
}

model Bid {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  bidder      User   @relation(fields: [bidderId], references: [id])
  bidderId    Int
}
